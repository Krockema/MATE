@model Master40.DB.DataModel.T_CustomerOrder

@{
    ViewData[index: "Title"] = "Create";
}

<h2>Create</h2>

<form asp-action="Create">
    <div class="form-horizontal">
        <h4>Order</h4>
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Name" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="DueTime" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="DueTime" class="form-control" />
                <span asp-validation-for="DueTime" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="BusinessPartnerId" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <select asp-for="BusinessPartnerId" class ="form-control" asp-items="ViewBag.BusinessPartnerId"></select>
            </div>
        </div>
        <div class="modal-footer">
            <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
            <button type="submit" asp-toggle="modal" data-target="#modal-container" value="Create" class="btn btn-default">Save</button>
        </div>
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync(partialViewName: "_ValidationScriptsPartial");}
}
