@model Master40.Models.DB.Article

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Create</h2>

<form asp-action="Create">
    <div class="form-horizontal">
        <h4>Article</h4>
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Name" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="UnitID" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <select asp-for="UnitID" class ="form-control" asp-items="ViewBag.UnitID"></select>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="ArticleTypeID" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <select asp-for="ArticleTypeID" class ="form-control" asp-items="ViewBag.ArticleTypeID"></select>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Price" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="DeliveryPeriod" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="DeliveryPeriod" class="form-control" />
                <span asp-validation-for="DeliveryPeriod" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="CreationDate" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="CreationDate" class="form-control" />
                <span asp-validation-for="CreationDate" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
