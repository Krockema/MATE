@model IEnumerable<Master40.DB.DataModel.M_Article>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    <a asp-action="Create" class="btn btn-outline-secondary"><i class="fa fa-plus-square-o fa-1x fa-unset"></i> New</a>
</p>
<table class="table table-sm table-striped">
    <thead class="thead-dark">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DeliveryPeriod)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CreationDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ArticleType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Unit)
            </th>
            <th style="text-align: right;">Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DeliveryPeriod)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CreationDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ArticleType.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Unit.Name)
                </td>
                <td style="text-align: right;">
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-secondary btn-sm">
                        <i class="fa fa-pencil-square-o fa-1x fa-unset"></i> Edit
                    </a> |
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-secondary  btn-sm">
                        <i class="fa fa-eye fa-1x fa-unset"></i> Details
                    </a> |
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-secondary btn-sm">
                        <i class="fa fa-trash fa-1x fa-unset"></i> Delete
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
