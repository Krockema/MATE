@model IEnumerable<Master40.DB.DataModel.M_Stock>

@{
    ViewData[index: "Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    <a asp-action="Create" class="btn btn-outline-secondary"><i class="fa fa-plus-square-o fa-1x fa-unset"></i> New</a>
</p>
<table class="table table-sm table-striped">
    <thead class="thead-dark">
        <tr>
            <th>
                @Html.DisplayNameFor(expression: model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(expression: model => model.Max)
            </th>
            <th>
                @Html.DisplayNameFor(expression: model => model.Min)
            </th>
            <th>
                @Html.DisplayNameFor(expression: model => model.Current)
            </th>
            <th>
                @Html.DisplayNameFor(expression: model => model.Article)
            </th>
            <th style="text-align: right;">Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(expression: modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(expression: modelItem => item.Max)
                </td>
                <td>
                    @Html.DisplayFor(expression: modelItem => item.Min)
                </td>
                <td>
                    @Html.DisplayFor(expression: modelItem => item.Current)
                </td>
                <td>
                    @Html.DisplayFor(expression: modelItem => item.Article.Name)
                </td>
                <td style="text-align: right;">
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
