@{
    ChartJSCore.Models.Chart chart = (ChartJSCore.Models.Chart)ViewData[index: "chart"];
    string raw = "Chart Rendering Failed";
    if (chart != null) { 
        raw = chart.CreateChartCode(canvasId: "MaschineChart");
    }
}

<style>
    .chartWrapper {
        position: relative;
            
    }

    .chartWrapper > canvas {
        position: absolute;
        left: 0;
        top: 0;
        pointer-events:none;
    }
    .chartAreaWrapper {
        overflow-x: scroll;
        position: relative;
        width: 100%;
    }

    .chartAreaWrapper2 {
          
        position: relative;
        height: 300px;
    }
</style>
<div class="chartWrapper">
    <div class="chartAreaWrapper">
        <div class="chartAreaWrapper2">
                <!--div id="js-legend" class="chart-legend"><div-->
                <canvas id="MaschineChart" height="300" width="0"></canvas>
            </div>
    </div>
</div>

<script>
    @Html.Raw(value: raw);
    $( document ).ready(function() {
        var newwidth = 20 * MaschineChart.data.datasets[0].data.length;
        $('.chartAreaWrapper2').width(newwidth);
        $('.chartAreaWrapper').animate({scrollLeft:newwidth});

        //document.getElementById('js-legend').innerHTML = MaschineChart.generateLegend();
    });


</script>
