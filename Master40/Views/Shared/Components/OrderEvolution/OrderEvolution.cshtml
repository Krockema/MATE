    .chartWrapper > canvas {
        position: absolute;
        left: 0;
        top: 0;
        pointer-events:none;
    }
    .chartAreaWrapper {
        overflow-x: scroll;
        position: relative;
        width: 100%;
    }
    .chartAreaWrapper2 {
        position: relative;
        height: 300px;
    }
</style>
<div class="chartWrapper">
    <div class="chartAreaWrapper">
        <div class="chartAreaWrapper2">
                <!--div id="js-legend" class="chart-legend"><div-->
                <canvas id="OrderEvolution_@type" height="300"></canvas>
            </div>
    </div>
</div>

