    string level = ViewData[index: "level"]?.ToString() ?? "";
    level = (level != "") ? level + "." : level;
    int count = 0;
    string display = "";
}
@if (Model.Count() > 0 && Model != null)
{
    foreach (var item in Model)
    {
        <tr>
            <td>
                @{ count = count + 1; display = level + count.ToString(); }
                @display
            </td>
            <td>
                @Html.DisplayFor(expression: modelItem => item.Quantity)
            </td>
            <td>
                @Html.DisplayFor(expression: modelItem => item.ProductionOrderParent.Name)
            </td>
            <td>
                @Html.DisplayFor(expression: modelItem => item.ProductionOrderParent.Article.Name)
            </td>
